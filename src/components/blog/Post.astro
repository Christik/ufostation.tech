---
import { formatFullDate, processHeroImage } from 'src/lib/content';
import { t, readingTime } from 'src/locales';

const { content } = Astro.props;
const { title, pubDate, updatedDate, heroImage, minutesRead } = content;
---
<article class="post">
    {heroImage && (
        <img class="post__hero-image" src={processHeroImage(import.meta.env.BASE_URL, heroImage)} alt={`${t('image')}: ${title}`} />
    )}
    <h1 class="post__title">{title}</h1>
    <div class="post__meta">
        {pubDate && <time datetime={pubDate}>{formatFullDate(pubDate)}</time>}
        {updatedDate && <>• ({t('updated')} <time datetime={updatedDate}>{formatFullDate(updatedDate)}</time>)</>}
        •
        {readingTime(minutesRead)}
    </div>
    <div class="post__content">
        <slot />
    </div>
</article>
