---
import Navigation from 'src/components/post/Navigation.astro';

export interface Props {
  title: string;
  series: string;
}

const { title, series } = Astro.props;
---

<style>
  .series {
    display: flex;
    padding: var(--spacer-l);
    background: var(--background-secondary);
    gap: var(--spacer-2xl);
    margin: var(--spacer-l) 0;
  }
  .series__column--left {
    flex: 1.6;
  }
  .series__column--right {
    flex: 1;
    padding: var(--spacer-base);
    background: var(--background-quaternary);
    align-self: center;
  }
  .series__column--right nav {
    background: none;
  }
  .series__title {
    font-size: var(--font-size-heading-h2);
    font-weight: 400;
  }
  .series__content {
    font-size: var(--font-size-loud);
    font-weight: 300;
    margin: var(--spacer-xl) 0;
  }
  .series__link {
    font-size: var(--font-size-loud);
  }
  .series__icon {
    width: 250px;
    height: 250px;
  }
  @media (max-width: 768px) {
    .series__title {
      font-size: var(--font-size-heading-h3);
    }
    .series__content {
      font-size: var(--font-size-base);
    }
    .series {
      display: block;
    }
  }
</style>
<div class="series">
  <div class="series__column series__column--left">
    <div class="series__title">
      {title}
    </div>
    <div class="series__content">
      <slot />
    </div>
  </div>
  <div class="series__column series__column--right">
    Содержание серии
    <Navigation series={series} />
  </div>
</div>
