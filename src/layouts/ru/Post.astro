---
import Post from 'src/components/blog/Post.astro';
import Link from 'src/components/Link.astro';
import { t } from 'src/locales';
import BaseLayout from './Base.astro';

const { content: { title, description, heroImage }} = Astro.props;
---
<BaseLayout meta={{ title, description, heroImage, lang: 'ru' }}>
	<Post {...Astro.props}>
		<slot />
		<Link href="/ru/posts/" aria-label={t('backToTheBlog') as string}>‚Üê {t('backToTheBlog')}</Link>
	</Post>
</BaseLayout>
